<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_marginLeft="20dp"
    app:cardCornerRadius="5dp">

    <!--TODO 4: Insert ImageView inside LinearLayout with height as 250dp and width as mathcparent with id as imageView -->
    <!--TODO 5: Insert TextView below ImageView in LinearLayout with id as nameTextView having height wrap content and height matched to parent.  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="488dp"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contentDescription="@string/TODO"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/name"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="50dp"
            android:text="@string/textview" />

        <TextView
            android:id="@+id/details"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="50dp"
            android:text="@string/textview" />


    </LinearLayout>

</android.support.v7.widget.CardView>